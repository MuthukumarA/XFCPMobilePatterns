<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XFMyNotesAppFP.ViewNotePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="View Note">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="5,20,5,0" />
            <On Platform="Android" Value="5,0,5,0" />
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.ToolbarItems>
        <ToolbarItem
            x:Name="EditNoteButton"
            Clicked="EditNoteButton_OnClicked"
            Text="Edit" />
    </ContentPage.ToolbarItems>

    <StackLayout>
        <Label
            FontAttributes="Bold"
            FontSize="15"
            Text="{Binding NoteTitle}"
            VerticalOptions="Start" />
        <Label
            FontSize="20"
            Text="{Binding NoteText}"
            VerticalOptions="StartAndExpand" />
        <Label Text="{Binding TimeStamp, StringFormat='{}{0:dddd dd MMMM yyyy a\\t h:mm tt}'}" VerticalOptions="End" />
    </StackLayout>
</ContentPage>